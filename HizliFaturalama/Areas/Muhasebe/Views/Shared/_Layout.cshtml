@using System.Security.Claims

@{
    var userRoles = User.Claims.Where(c => c.Type == ClaimTypes.Role)
                .Select(c => c.Value).ToList();
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HizliFaturalama Admin</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  


    <style>

        .main-wrapper {
            flex: 1;
            display: flex;
        }

        .left-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            min-height: 100vh;
            width: 250px;
            background-color: #343a40;
            color: white;
            padding: 1rem;
            position: relative;
        }

        .footer {
            margin-top: auto;
            border-top: 1px solid #ddd;
            background-color: #f8f9fa;
            padding: 10px 0;
        }

        .left-sidebar-logout {
            background-color: transparent !important;
            color: #ffffff !important;
            border: none !important;
            text-decoration: none !important;
        }

            .left-sidebar-logout:hover {
                background-color: transparent !important;
                color: #cccccc !important; /* Hover efekti için isteğe bağlı bir renk */
            }
    </style>
</head>

<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="main-wrapper">
            <nav class="left-sidebar bg-dark text-white p-3" style="width: 250px;">
                <h3>Admin Panel</h3>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Muhasebe/Muhasebe/CreateInvoice">Fatura Oluştur</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Muhasebe/Muhasebe/ManageCustomer">Müşteri Yönetimi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Muhasebe/Muhasebe/GetAllInvoices">Faturalar</a>
                    </li>
                    <li>
                        <form method="post" action="/api/auth/logout" class="form-inline">
                            <button type="submit" class="nav-link text-white left-sidebar-logout">Çıkış</button>
                        </form>
                    </li>
                </ul>
            </nav>
            <!-- Main Content -->
            <div class="flex-grow-1 p-4">
                @RenderBody()
            </div>
        </div>
    </div>



</body>

</html>